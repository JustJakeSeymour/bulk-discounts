<h1><%= @item.name %> Edit Page</h1>

<%= form_with model: @item, url: merchant_item_path(@item.merchant_id, @item.id), method: :patch, local: true do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :unit_price, 'Current Selling Price' %>
  <%= f.number_field :unit_price %>
  <%= f.submit 'Update Item' %>
<% end %>
