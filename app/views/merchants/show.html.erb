<h1><%= @merchant.name %></h1>

<%= link_to "Merchant Items Index", url: "/merchants/#{@merchant.id}/items" %>
<%= link_to "Merchant Invoices Index", url: "/merchants/#{@merchant.id}/invoices" %>

<div id="top_customers">
  <h2>Top Customers:</h2>
  <ul>
    <% @merchant.top_customers.each do |customer| %>
      <li id="customer_id<%= customer.id %>">Name: <%= customer.first_name %> <%= customer.last_name %>, successful transactions: <%= customer.count_successful_transactions %></li>
    <% end %>
  </ul>
</div>

<div id="ready-to-ship">
<h2>Ready To Ship Items</h2>
  <% @merchant.ready_to_ship.each do |invoice_item| %>
    <%= invoice_item.item_name %>
  <% end %>
</div>