<h1><%= @merchant.name %>'s Bulk Discounts</h1>

<%= link_to "Create Discount", new_merchant_bulk_discount_path(@merchant.id) %>

<ul>
  <% @merchant.bulk_discounts.each do |discount| %>
    <li id="bulk_discount_<%= discount.id %>">
      <p>Percent Discount: <%= discount.percent_discount %></p>
      <p>Quantity Threshold: <%= discount.quantity_threshold %></p>
      <%= link_to "Details", merchant_bulk_discount_path(@merchant.id, discount.id) %>
      <%= button_to "Delete", merchant_bulk_discount_path(@merchant.id, discount.id), method: :delete %>
    </li>
  <% end %>
</ul>

<div id="upcoming_holidays">
<h3>Upcoming Holidays:</h3>

<ul>
  <% @next_three_holidays.each do |holiday| %>
    <li><%= holiday.name %>, <%= holiday.date.to_date %>
  <% end %>
</ul>
</div>